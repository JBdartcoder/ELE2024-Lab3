% Plot negative section
v=-10:0.01:0;
i1=-0.0001*((exp(abs(v)))-1);
plot(v,i1,'r');
grid on;
grid minor;
% Plot positive section
v=0:0.01:10;
i1=0.0001*((exp(v))-1);
hold on;
plot(v,i1,'r');
xlabel('Voltage (V)'); 
ylabel('Current (A)');
grid on;
title('i-v characteristics of the circuit (0.01v intervals)');
